<%= _('Name') -%>:
<form action="<%= smart_group_rename_url(:id => smart_group.id) %>" method="post" onsubmit="return true;">
  <input type="text" name="name" value="<%= smart_group.name %>" style="width: 100%;"/>
  <div style="text-align: right;margin-top:3px;">
    <%= submit_tag _('Rename'), { :name => 'Submit' } %>
  </div>
</form>